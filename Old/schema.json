{
    "version": "1.2",
    "inputs": [
        {
            "name": "server",
            "label": "Meeting Room API URL",
            "placeholder": "Enter URL here",
            "type": "textbox",
            "validation": {
                "required": true
            }
        },
        {
            "name": "email",
            "label": "Room",
            "placeholder": "Enter Room ID here",
            "type": "textbox",
            "validation": {
                "required": true
            }
        },
        {
            "name": "features",
            "label": "Feature Settings",
            "type": "checkbox",
            "visible": true,
            "items": [
                {
                    "label": "Enable Interactive Mode",
                    "value": "interactive"
                },
                {
                    "icon": "",
                    "label": "Allow Early Meeting Ending",
                    "value": "cancellable"
                },
                {
                    "icon": "",
                    "label": "Auto Cancel No-Show Meetings",
                    "value": "mustStart"
                },
                {
                    "icon": "",
                    "label": "Defer Meeting Ending by 15 minutes",
                    "value": "deferCancel"
                },
                {
                    "icon": "",
                    "label": "Allow Meeting Extension",
                    "value": "extendable"
                },
                {
                    "icon": "",
                    "label": "Enable Screen Saver Mode",
                    "value": "screensaver"
                },
                {
                    "icon": "",
                    "label": "Disable interactivty when offline",
                    "value": "offlinePassive"
                },
                {
                    "icon": "",
                    "label": "Enable Auto Login",
                    "value": "autoLogin"
                },
                {
                    "icon": "",
                    "label": "Disable booking slot",
                    "value": "disableBookingSlot"
                }
            ]
        },
        {
            "name": "screensaverMode",
            "label": "Screen Saver Mode",
            "type": "dropdown",
            "options": {
                "defaultitem": "bounce"
            },
            "items": [
                {
                    "icon": "",
                    "label": "Bouncing Window",
                    "value": "bounce"
                },
                {
                    "icon": "",
                    "label": "Move Next",
                    "value": "nextLayout"
                }
            ]
        },
        {
            "name": "refreshTimeout",
            "label": "Data Refresh Timeout (in seconds)",
            "placeholder": "Enter Refresh timeout in seconds",
            "type": "textbox",
            "validation": {
                "required": true
            }
        },
        {
            "name": "idleDuration",
            "label": "Screen Saver Timeout",
            "type": "dropdown",
            "options": {
                "defaultitem": "3"
            },
            "items": [
                {
                    "icon": "",
                    "label": "1 Minute",
                    "value": 1
                },
                {
                    "icon": "",
                    "label": "2 Minutes",
                    "value": 2
                },
                {
                    "icon": "",
                    "label": "3 Minutes",
                    "value": 3
                },
                {
                    "icon": "",
                    "label": "4 Minutes",
                    "value": 4
                },
                {
                    "icon": "",
                    "label": "5 Minutes",
                    "value": 5
                }
            ]
        },
        {
            "name": "logoMain",
            "label": "Main Logo",
            "type": "fileupload",
            "options": {
                "maxfiles": 1
            },
            "validation": {
            "fileextensions": [
                ".bmp",
                ".jpg",
                ".jpeg",
                ".png"
            ],
            "required": false
            }
        },
        {
            "name": "mainBackground",
            "label": "Main Background",
            "type": "fileupload",
            "options": {
                "maxfiles": 1
            },
            "validation": {
            "fileextensions": [
                ".bmp",
                ".jpg",
                ".jpeg",
                ".png"
            ],
            "required": false
            }
        },    
        {
            "name": "screensaverBg",
            "label": "Screen Saver Background",
            "type": "fileupload",
            "options": {
                "maxfiles": 1
            },
            "validation": {
            "fileextensions": [
                ".bmp",
                ".jpg",
                ".jpeg",
                ".png"
            ],
            "required": false
            }
        },
        {
            "name": "lightapiusername",
            "label": "Light Bar API Username",
            "placeholder": "Enter Light Bar API Username",
            "type": "textbox",
            "validation": {
                "required": true
            }
        },
        {
            "name": "lightapipassword",
            "label": "Light Bar API Password",
            "placeholder": "Enter Light Bar API Password",
            "type": "textbox",
            "validation": {
                "required": false
            }
        }
    ]
}